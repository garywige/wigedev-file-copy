<Window x:Class="WigeDev_File_Copy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WigeDev_File_Copy"
        xmlns:uc="clr-namespace:WigeDev_File_Copy.UserControls"
        mc:Ignorable="d"
        Title="WigeDev File Copy" Height="440" Width="400" MinHeight="440" Background="LightGray" FontSize="16">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <uc:FolderSelectionControl x:Name="sourceSelection"/>

        <uc:FolderSelectionControl x:Name="destinationSelection" Grid.Row="1" />

        <StackPanel Grid.Row="2">
            <Button Content="{Binding Path=CopyCancelButtonContent}" Command="{Binding Path=CopyCancelCommand}" />    
        </StackPanel>


        <ListBox Name="outputListBox" Grid.Row="3" ItemsSource="{Binding Output}"/>

    </Grid>
</Window>
