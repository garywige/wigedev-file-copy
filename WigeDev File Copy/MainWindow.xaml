<Window x:Class="WigeDev_File_Copy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WigeDev_File_Copy"
        mc:Ignorable="d"
        Title="WigeDev File Copy" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel>
            <Label>Source</Label>
            <TextBox Name="sourceTextBox" />
        </StackPanel>

        <StackPanel Grid.Row="1">
            <Label>Destination</Label>
            <TextBox Name="destinationTextBox" />
        </StackPanel>

        <Button Grid.Row="2" Content="Copy" />

        <ListBox Name="outputListBox" Grid.Row="3" />

    </Grid>
</Window>
